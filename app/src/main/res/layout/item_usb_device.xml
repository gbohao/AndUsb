<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    app:cardBackgroundColor="#fff"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="3dp"
                                    app:contentPadding="16dp"
                                    android:foreground="?attr/selectableItemBackground">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_usb_light_blue_a700_24dp"
            android:background="@drawable/bg_white_border_blue_radius"
            android:id="@+id/iv_device_icon"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_device_interface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_settings_input_component_brown_200_18dp"
            android:layout_below="@+id/tv_device_name"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/tv_device_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_settings_grey_400_18dp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:layout_below="@+id/tv_device_name"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>